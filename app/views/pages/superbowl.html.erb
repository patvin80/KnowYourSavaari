	function getRandomNumberFrom0To9(choice){

		if (choice == 1)
			pool = horizontalPool;
		else 
			pool = verticalPool;
	    if (pool.length == 0) {
	        throw "No numbers left";
	    }
	    var index = Math.floor(pool.length * Math.random());
	    var drawn = pool.splice(index, 1);
	    return drawn[0];
    }


